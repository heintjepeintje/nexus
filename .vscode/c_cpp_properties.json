{
	"version": 4,
	"configurations": [
		{
			"name": "Debug",
			"browse": {
				"path": [ "src" ]
			},
			"cStandard": "c17",
			"defines": [ "_DEBUG" ],
			"includePath": [
				"src",
				"${env:VK_SDK_PATH}/Include"
			],
			"intelliSenseMode": "gcc-x64"
		},
		{
			"name": "Release",
			"browse": {
				"path": [ "src" ]
			},
			"cppStandard": "c++20",
			"defines": [ "NDEBUG" ],
			"includePath": [
				"src",
				"${env:VK_SDK_PATH}/Include"
			],
			"cStandard": "c17",
			"intelliSenseMode": "gcc-x64"
		}
	]
}